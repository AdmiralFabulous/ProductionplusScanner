# PRODUCTION-SCANNER Environment Configuration
# Copy this file to .env and fill in your values
# Reference: SUIT_AI_Master_Operations_Manual_v6_7_1.md Section 2.5

# ─────────────────────────────────────────────────────────────────
# SECURITY - GENERATE STRONG SECRETS
# ─────────────────────────────────────────────────────────────────

# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-jwt-secret-minimum-32-characters-long-change-this
JWT_REFRESH_SECRET_KEY=your-refresh-secret-different-from-above-change-this

# API key for internal service communication
PATTERN_FACTORY_API_KEY=your-internal-api-key-change-this

# ─────────────────────────────────────────────────────────────────
# DATABASE
# ─────────────────────────────────────────────────────────────────

DB_USER=samedaysuits
DB_PASSWORD=changeme-strong-password-here
DB_NAME=samedaysuits
DB_HOST=postgres
DB_PORT=5432

# Full connection URL (optional - constructed from above if not set)
# DATABASE_URL=postgresql://samedaysuits:password@localhost:5432/samedaysuits

# ─────────────────────────────────────────────────────────────────
# REDIS
# ─────────────────────────────────────────────────────────────────

REDIS_URL=redis://localhost:6379
REDIS_HOST=redis
REDIS_PORT=6379

# ─────────────────────────────────────────────────────────────────
# PATTERN FACTORY
# ─────────────────────────────────────────────────────────────────

# API Configuration
PATTERN_FACTORY_PORT=8000
PATTERN_FACTORY_HOST=0.0.0.0

# Cutter Configuration (Jindex UPC Inkjet)
CUTTER_IP=192.168.1.100
CUTTER_PORT=9100
CUTTER_AUTO_SUBMIT=true

# Fabric Settings
FABRIC_WIDTH_INCHES=62
FABRIC_UTILIZATION_TARGET=0.85

# Nesting Worker Configuration
NESTING_WORKERS=2
NESTING_TIMEOUT_SECONDS=300

# ─────────────────────────────────────────────────────────────────
# EYESON
# ─────────────────────────────────────────────────────────────────

# API Configuration
EYESON_API_PORT=8001
EYESON_API_HOST=0.0.0.0

# Pattern Factory Integration
PATTERN_FACTORY_URL=http://localhost:8000

# TTS Configuration
TTS_MODEL=kokoro-82m
TTS_FALLBACK=piper
TTS_CACHE_DIR=./cache/tts

# Voice Prompts
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,zh,ar

# ML Service (for SAM-3D-Body if external)
ML_SERVICE_URL=http://localhost:8002
ML_SERVICE_TIMEOUT=30

# Scan Configuration
SCAN_DURATION_SECONDS=90
MIN_CONFIDENCE_P0=0.90
MIN_CONFIDENCE_P1=0.85

# ─────────────────────────────────────────────────────────────────
# FRONTEND
# ─────────────────────────────────────────────────────────────────

FRONTEND_PORT=5173
FRONTEND_HOST=0.0.0.0

# Vite environment variables (prefix with VITE_)
VITE_API_URL=http://localhost:8001
VITE_PATTERN_FACTORY_URL=http://localhost:8000
VITE_ENABLE_VOICE=true
VITE_ENABLE_DEBUG=false
VITE_DEFAULT_LANGUAGE=en

# ─────────────────────────────────────────────────────────────────
# MONITORING (Optional)
# ─────────────────────────────────────────────────────────────────

# Grafana
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# Prometheus
PROMETHEUS_PORT=9090

# ─────────────────────────────────────────────────────────────────
# LOGGING
# ─────────────────────────────────────────────────────────────────

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# ─────────────────────────────────────────────────────────────────
# EXTERNAL SERVICES (Optional)
# ─────────────────────────────────────────────────────────────────

# If using external TTS or AI services
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# HUGGINGFACE_TOKEN=hf_...

# Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=notifications@samedaysuits.com
# SMTP_PASSWORD=app-specific-password

# ─────────────────────────────────────────────────────────────────
# DEVELOPMENT
# ─────────────────────────────────────────────────────────────────

DEBUG=false
RELOAD=false
ENVIRONMENT=production

# CORS - Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Testing
TEST_DB_NAME=samedaysuits_test
PYTEST_CURRENT_TEST=0
